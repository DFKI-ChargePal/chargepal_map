<launch>

	<arg name="gui" default="true" doc="Option to bringup a GUI"/>
	<arg name="config_dir" default="$(find chargepal_map)/config"/>

	<node pkg="chargepal_map" type="manipulation_server.py" name="manipulation_server" 
			args="$(arg config_dir)" output="screen"/>

	<group if="$(eval arg('gui'))">
		<node pkg="chargepal_map" type="manipulation_server_ui.py" name="manipulation_server_ui" output="screen">
		</node>
	</group>

</launch>
